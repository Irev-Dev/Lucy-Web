{
  "name": "lucy-web",
  "version": "1.0.0",
  "description": "Lucy Server code",
  "main": "server/start.js",
  "scripts": {
    "test": "jest",
    "watch-server": "nodemon ./server/start.js --ignore public/",
    "build-js": "parcel build server/client/client.js --out-dir server/client/dist  --public-url ./ --log-level 1",
    "build-css": "concurrently \"parcel build server/client/normalise.css --out-dir server/client/dist  --public-url ./ --log-level 1 \" \"parcel build server/client/style.css --out-dir server/client/dist --public-url ./ --log-level 1 \" ",
    "build-html": "parcel build server/client/main.html --out-dir server/client/dist --public-url ./ --log-level 1",
    "build": "concurrently \"npm run build-js\" \"npm run build-css\" ",
    "start": "node ./server/start.js",
    "dev": "concurrently \"npm run watch-server\" \"npm run build\" --names \"ðŸ’»,ðŸ“¦\" --prefix name",
    "db-edit": "node ./server/dbEdit.js"
  },
  "repository": {
